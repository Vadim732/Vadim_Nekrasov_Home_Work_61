@model List<Publication>

<h2>Posts from Followed Users</h2>

@foreach (var publication in Model)
{
    <div class="card my-3">
        <div class="card-header">
            <h5 class="card-title">@publication.User.UserName</h5>
        </div>
        <img src="@publication.Image" class="card-img-top" alt="Publication image">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2">
                <form asp-action="ToggleLike" method="post">
                    <input type="hidden" name="publicationId" value="@publication.Id" />
                    <button type="submit" class="btn btn-light me-2">
                        <a class="btn btn-success">Like</a> @publication.LikeCount
                    </button>
                </form>
                <button class="btn btn-light">
                    <a class="btn btn-success">Comment</a> @publication.CommentCount
                </button>
            </div>

            <p class="card-text">@publication.Description</p>
            <small class="text-muted">Created: @publication.CreatedAt.ToString("dd MMM yyyy")</small>
            <div class="mt-3">
                <h6>Comments:</h6>
                @foreach (var comment in publication.Comments)
                {
                <div>
                    <strong>@comment.User.UserName:</strong> @comment.Text
                    <small class="text-muted">(@comment.CreatedAt.ToString("dd MMM yyyy HH:mm"))</small>
                </div>
                }
                <form asp-action="AddComment" method="post">
                    <input type="hidden" name="publicationId" value="@publication.Id" />
                    <div class="form-group mt-2">
                        <textarea name="text" class="form-control" placeholder="Add a comment..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
                </form>
            </div>
        </div>
    </div>
}