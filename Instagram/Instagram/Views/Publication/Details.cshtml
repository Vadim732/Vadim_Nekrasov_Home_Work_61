@model Publication

@{
    ViewBag.Title = "Details publication";
    Layout = "_Layout";
}

<div class="card my-3">
    <div class="card-header">
        <h5 class="card-title">@Model.User.UserName</h5>
        <form asp-action="Follow" method="post">
            <input type="hidden" name="followingId" value="@Model.UserId" />
            <button type="submit" class="btn btn-primary">Follow</button>
        </form>
        <form asp-action="Unfollow" method="post">
            <input type="hidden" name="followingId" value="@Model.UserId" />
            <button type="submit" class="btn btn-primary">Unfollow</button>
        </form>
    </div>
    <img src="@Model.Image" class="card-img-top" alt="Publication image">
    <div class="card-body">
        <div class="d-flex align-items-center mb-2">
            <form asp-action="ToggleLike" method="post">
                <input type="hidden" name="publicationId" value="@Model.Id" />
                <button type="submit" class="btn btn-light me-2">
                    <a class="btn btn-success">Like</a> @Model.LikeCount
                </button>
            </form>
            <button class="btn btn-light">
                <a class="btn btn-success">Comment</a> @Model.CommentCount
            </button>
        </div>
        <p class="card-text">@Model.Description</p>
        <small class="text-muted">Created: @Model.CreatedAt.ToString("dd MMM yyyy")</small>
        <div class="mt-3">
            <h6>Comments:</h6>
            @foreach (var comment in Model.Comments)
            {
                <div>
                    <strong>@comment.User.UserName:</strong> @comment.Text
                    <small class="text-muted">(@comment.CreatedAt.ToString("dd MMM yyyy HH:mm"))</small>
                </div>
            }
            <form asp-action="AddComment" method="post">
                <input type="hidden" name="publicationId" value="@Model.Id" />
                <div class="form-group mt-2">
                    <textarea name="text" class="form-control" placeholder="Add a comment..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
            </form>
        </div>
    </div>
</div>