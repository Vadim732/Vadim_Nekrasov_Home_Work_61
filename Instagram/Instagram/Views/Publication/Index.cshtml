@model List<Publication>

@{
    ViewBag.Title = "Main page - Post list";
}
<h2>Recommendations</h2>
@foreach (var a in Model)
{
    <div class="card my-3">
        <div class="card-header">
            <h5 class="card-title">@a.User.UserName</h5>
            <div class="d-inline">
                <form asp-action="Follow" method="post" class="d-inline">
                    <input type="hidden" name="followingId" value="@a.UserId" />
                    <button type="submit" class="btn btn-primary">Follow</button>
                </form>
                <form asp-action="Unfollow" method="post" class="d-inline">
                    <input type="hidden" name="followingId" value="@a.UserId" />
                    <button type="submit" class="btn btn-primary">Unfollow</button>
                </form>
            </div>
        </div>
        <img src="@a.Image" class="card-img-top" alt="Publication image">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2">
                <form asp-action="ToggleLike" method="post">
                    <input type="hidden" name="publicationId" value="@a.Id" />
                    <button type="submit" class="btn btn-light me-2">
                        <a class="btn btn-success">Like</a> @a.LikeCount
                    </button>
                </form>
                <button class="btn btn-light">
                    <a class="btn btn-success">Comment</a> @a.CommentCount
                </button>
            </div>
            
            <p class="card-text">@a.Description</p>
            <small class="text-muted">Created: @a.CreatedAt.ToString("dd MMM yyyy")</small>
            <div class="mt-3">
                <h6>Comments:</h6>
                @foreach (var comment in a.Comments)
                {
                <div>
                    <strong>@comment.User.UserName:</strong> @comment.Text
                    <small class="text-muted">(@comment.CreatedAt.ToString("dd MMM yyyy HH:mm"))</small>
                </div>
                }
                <form asp-action="AddComment" method="post">
                    <input type="hidden" name="publicationId" value="@a.Id" />
                    <div class="form-group mt-2">
                        <textarea name="text" class="form-control" placeholder="Add a comment..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
                </form>
            </div>
        </div>
    </div>
}